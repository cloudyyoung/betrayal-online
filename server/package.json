{
    "name": "betrayal-online-server",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "dev": "nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/index.ts\"",
        "lint": "eslint 'src/**/*.{ts,tsx}' --max-warnings=0",
        "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
        "build": "tsc -p tsconfig.json",
        "start": "node dist/index.js"
    },
    "engines": {
        "node": ">=14"
    },
    "dependencies": {
        "express": "^5.1.0",
        "socket.io": "^4.8.1",
        "mongoose": "^8.19.2",
        "dotenv": "^17.2.3"
    },
    "devDependencies": {
        "nodemon": "^3.1.10",
        "eslint": "^9.38.0",
        "@typescript-eslint/parser": "^8.46.2",
        "@typescript-eslint/eslint-plugin": "^8.46.2",
        "typescript": "^5.9.3",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "@types/node": "^24.9.1",
        "@types/express": "^5.0.3",
        "@types/socket.io": "^3.0.2"
    }
}